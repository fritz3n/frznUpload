@page
@model frznUpload.Web.Areas.Account.Pages.Manage.DeleteModel
@{
    ViewData["Title"] = "Delete account";
}

<form method="post">
    <h4>Delete account</h4>
    <hr />
    <p>Are you sure you want to delete your account? This will delete all your files irrecoverably.</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Input.Sure" class="form-check-input" />
        <label asp-for="Input.Sure" class="form-check-label"></label>
        <span asp-validation-for="Input.Sure" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Delete Account</button>
</form>
