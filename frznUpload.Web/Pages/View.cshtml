@page "/v/{shareId}"
@model frznUpload.Web.Pages.ViewModel
@{
}

<div>
    @await Html.PartialFileView(Model.FileViewInfo)
</div>

<div class="row justify-content-center size" style="font-size: 1.5em;">
    <div class="m-2">
        <a asp-controller="Download" asp-action="DownloadShare" asp-route-shareId="@Model.ShareName"><i class="fas fa-download text-secondary"></i></a>
    </div>

    @if (Model.IsOwner)
    {
        <div class="m-2">
            <a asp-area="Account" asp-page="/Shares/Delete" asp-route-id="@Model.ShareId" title="Remove Share">
                <i class="far fa-trash-alt text-secondary"></i>
            </a>
        </div>
        <div class="m-2">
            <a asp-area="Account" asp-page="/Shares/Details" asp-route-id="@Model.ShareId" title="Share Details">
                <i class="fas fa-info-circle text-secondary"></i>
            </a>
        </div>
        <div class="m-2">
            <a asp-area="Account" asp-page="/Files/Delete" asp-route-id="@Model.FileId" title="Remove File">
                <i class="fas fa-dumpster text-secondary"></i>
            </a>
        </div>
    }
</div>